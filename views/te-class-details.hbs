		                    <td> {{dailyAve.[2]}} </td>
		                </tr>
						<tr>
		                    <td> {{skill4.[0]}} </td>
		                    <td> {{skill4.[1]}} </td>
		                    <td> {{skill4.[2]}} </td>
		                    <td> {{skill4.[3]}} </td>
		                    <td> {{skill4.[4]}} </td>
		                    <td> {{skill4.[5]}} </td>
