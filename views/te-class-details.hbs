		                    <td> {{skill2.[5]}} </td>
		                    <td> {{skill2.[6]}} </td>
		                    <td> {{skill2.[7]}} </td>
		                    <td> {{skill2.[8]}} </td>
		                    <td> {{dailyAve.[1]}} </td>
		                </tr>
												<tr>
		                    <td> {{skill3.[0]}} </td>
		                    <td> {{skill3.[1]}} </td>
		                    <td> {{skill3.[2]}} </td>
		                    <td> {{skill3.[3]}} </td>
		                    <td> {{skill3.[4]}} </td>
