<!DOCTYPE html>

{{> trainer-navbar}}

<div style="padding: 70px 20px 20px 20px;">
    <div><label class="h2" style="padding: 5px;color: #2c2c2c;"><strong>Classes</strong></label>
        <button type="button" id="create-class" class="myBtn" style="border: none; display:flex; margin-bottom: 10px; float: right; box-shadow: 1px 1px 5px rgba(0,0,0,0.2)" href="#createClassModal">
        <i class="material-icons" style="color:#ffffff; font-size: 18px;">add</i><label style="margin-left: 3px;">Create Class</label></button>
        {{> create-class-modal}}
        <hr>
    </div>
    <div id="trainer-classes">
        {{#each classList}}
    <div class=" d-inline-block" style="margin-right: 20px;">
        <div class="shadow-sm d-inline-block class-card" style="padding: 20px;" onclick="window.location.href = '/tr-class-details/{{{classID}}}'">
            <div style="height: 60%;"><img style="min-width: 310px;min-height: 140px;margin: 0 auto;border-color: none;" alt="image" src="{{{classPhoto}}}" width="310px" height="140px">
            </div>
            
            <div class="class-card-det" style="color: rgb(0,0,0);background: rgba(247,247,247,0);height: 35%; margin-bottom: 10px;">
                <hr>
                <div style="display: inline-block; width: 85%">
                    <div class="d-flex">
                        <label class="d-inline class-nbr" style="width: 35%;font-size: 14px;"><strong>{{classID}}</strong></label>
                        <label class="d-inline class-nbr" style="width: 50%;font-size: 14px;"><strong>{{courseName}}</strong></label>
                    </div>
                    <div class="d-flex">
                        <label class="d-inline class-nbr" style="width: 35%;font-size: 12px;">{{numTrainees}} Trainees</label>
                        <label class="d-inline class-nbr" style="width: 50%;font-size: 12px;">{{startDate}} - {{endDate}}, 2021</label>
                    </div>
                </div>
            </div>
        </div>
        <div style="display: block; text-align: right; vertical-align: top; padding-top: 4px;">
            <button type="button" id="edit-class" class="outlined-btn d-inline myBtn" style="color: #2b2b2b; border: none; background: none; font-size: 10px" href="#editClassModal">
                <i class="material-icons" style="font-size: 12px; position: relative; top: 2px;">create</i><label>Edit</label></button>
            <!--modal here // edit class-->
            {{> edit-class-modal}}
        </div>
    </div>

        {{/each}}
        
    </div>
</div>