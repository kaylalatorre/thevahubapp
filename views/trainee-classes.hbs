<!DOCTYPE html>

{{> trainee-navbar}}

<div style="padding: 70px 20px 20px 20px;">
    <div><label class="h2" style="padding: 5px;color: #2c2c2c;"><strong>Classes</strong></label>
        <div class="text-right d-inline-block float-right" style="margin: 0px 5px;padding: 5;"></div>
        <hr>
    </div>
    <div id="trainee-classes">
            {{#each classList}}
        <div class="shadow-sm d-inline-block class-card" style="padding: 20px;" onclick="window.location.href = '/te-class-details/{{{classID}}}'">
            <div style="height: 60%;"><img style="min-width: 310px;min-height: 140px;margin: 0 auto;border-color: none;" alt="image" src="{{{classPhoto}}}" width="310px" height="140px">
            </div>
            
            <div class="class-card-det" style="color: rgb(0,0,0);background: rgba(247,247,247,0);height: 35%; margin-bottom: 10px;">
                <hr>
                <div class="d-flex">
                    <label class="d-inline class-nbr" style="width: 30%;font-size: 14px;"><strong>{{classID}}</strong></label>
                    <label class="d-inline class-nbr" style="width: 50%;font-size: 14px;"><strong>{{courseName}}</strong></label>
                </div>
                <div class="d-flex">
                    <label class="d-inline class-nbr" style="width: 30%;font-size: 12px;">{{sDate}} - {{eDate}}, 2021</label>
                    <label class="d-inline class-nbr" style="width: 50%;font-size: 12px;">{{trainerName}}</label>
                </div>
            </div>
        </div>
            {{/each}}
    </div>
</div>