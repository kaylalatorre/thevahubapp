<!DOCTYPE html>

<div id="createSchedModal" class="modal">

  <!-- Modal content -->
  <div  id="create-sched-mod" class="modal-content">
    <div>
    	<label class="h4" style="color: #2c2c2c; float: left; display: inline-block;"><strong>Create </strong>Schedule</label>
    	<span class="close">&times;</span>
    </div>
    <div>
    	<hr>
    	<form id="createSched-form" style="margin-bottom: 30px;">

    		<div style="margin-bottom: 12px;">
				<label style="display: inline-block; width: 30%">Interview Phase</label>
				<div class="switch-field" style="display: inline-block;">
					<input type="radio" id="radio-one" name="int-phase" value="Initial" checked/>
					<label for="radio-one">Initial</label>
					<input type="radio" id="radio-two" name="int-phase" value="Final" />
					<label for="radio-two">Final</label>
				</div>
			</div>

			<div style="margin-bottom: 12px;">
				<label id="schedDate" style="display: inline-block; width: 30%">Date</label>
				<input id="sched-date" for="schedDate" type="date">
			</div>

			<div style="margin-bottom: 12px;">
				<label id="timeSlot" style="display: inline-block; width: 30%">Timeslot</label>
				<input id="time-start" for="timeSlot" type="time" min="17:00" max="5:00"> - <input id="time-end" for="timeSlot" type="time" min="17:00" max="5:00">
			</div>

			<div style="margin-bottom: 12px;">
				<label id="interviewerName" style="display: inline-block; width: 30%">Interviewer</label>
				<select id="interv-dropdown" for="interviewerName" class="appdrop" style="width: 68%">     
					<option value="none" selected disabled hidden> 
						Interviewer Name
				    </option> 
				</select>
			</div>
			<div style="margin-bottom: 12px;">
				<label id="applicantName" style="display: inline-block; width: 30%">Applicant</label>
				<select id="applic-dropdown" for="applicantName" class="appdrop" style="width: 68%">    
					<option value="none" selected disabled hidden> 
						Applicant Name
				    </option> 
				</select>
			</div>
			<div style="margin-bottom: 12px;">
				<label id="meet-link" style="display: inline-block; width: 30%">Meeting Link</label>
				<input id="meeting-link" for="meet-link" placeholder="Meeting Link" style="width: 68%">
			</div>
    	</form>
    	<button type="button" id="createSched" style="border: none;float:right;">Save</button>
    </div>
  </div>

</div>