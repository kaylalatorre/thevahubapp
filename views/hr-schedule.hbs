<!DOCTYPE html>

{{> hr-navbar}}

<div style="padding: 70px 20px 20px 20px;">
	<div><label class="h2" style="padding: 5px;color: #2c2c2c;"><strong>Schedule </strong>Interviews</label></div>
    <hr>
    <div style="width: 15%; float: left;">
    	<div style="margin-bottom: 25px;">
	    	<button id="create-schedBtn"type="button" class="myBtn" style="border: none;display:flex; margin-bottom: 10px; width:90%; box-shadow: 1px 1px 5px rgba(0,0,0,0.2)" href="#createSchedModal"><i class="material-icons" style="margin: 0px 10px; color:#ffffff; font-size: 18px;">add</i> Create Schedule</button>
	    	{{> create-sched-modal}}

			<!-- Search -->
	    	<input placeholder="Search for people" style="padding: 4px 10px;margin-bottom: 10px; width:90%;"></input>
    	</div>
	    <div>
	    	<ul class="nav nav-tabs" role="tablist">
	            <li class="nav-item" role="presentation"><a class="nav-link active" role="tab" data-toggle="tab" href="#tab-1">INITIAL</a></li>
	            <li class="nav-item" role="presentation"><a class="nav-link" role="tab" data-toggle="tab" href="#tab-2">FINAL</a></li>
	        </ul>
	        
	        <div class="tab-content" style="padding: 20px;margin: 0px -5px;">
	        	<!-- Initial Applicants -->
	            <div class="tab-pane active" role="tabpanel" id="tab-1">
	                <div class="wrap-collabsible" for="applicants" style="margin-bottom: 20px;">
	                    <input id="app-collapsible" class="collapsible-check toggle" type="checkbox" checked>
	                    <label for="app-collapsible" class="lbl-toggle">Applicants</label>
	                    <div id="applic-filter" class="collapsible-content" style="margin-left: 20px">

        				</div>
	                </div>

	                <div class="wrap-collabsible" for="interviewers" style="margin-bottom: 20px;">
	                    <input id="int-collapsible" class="collapsible-check toggle" type="checkbox" checked>
	                    <label for="int-collapsible" class="lbl-toggle">Interviewers</label>
	                    <div id="interv-filter" class="collapsible-content" style="margin-left: 20px">

        				</div>
	                </div>
	            </div>
	            <!-- Final Applicants -->
	            <div class="tab-pane" role="tabpanel" id="tab-2">
	                <div class="wrap-collabsible" for="applicants" style="margin-bottom: 20px;">
	                    <input id="app2-collapsible" class="collapsible-check toggle" type="checkbox" checked>
	                    <label for="app2-collapsible" class="lbl-toggle">Applicants</label>
	                    <div class="collapsible-content" style="margin-left: 20px">
	                    	<div class="sched-list">
			                    <input class="form-check-input applicantName" type="checkbox">
		        				<label class="form-check-label" for="applicantName" style="font-size: 14px;">Applicant Name</label>
	        				</div>
	        				<div class="sched-list">
			                    <input class="form-check-input applicantName" type="checkbox">
		        				<label class="form-check-label" for="applicantName" style="font-size: 14px;">Applicant Name</label>
	        				</div>
	        				<div class="sched-list">
			                    <input class="form-check-input applicantName" type="checkbox">
		        				<label class="form-check-label" for="applicantName" style="font-size: 14px;">Applicant Name</label>
	        				</div>
        				</div>
	                </div>
	                <div class="wrap-collabsible" for="interviewers" style="margin-bottom: 20px;">
	                    <input id="int2-collapsible" class="collapsible-check toggle" type="checkbox" checked>
	                    <label for="int2-collapsible" class="lbl-toggle">Interviewers</label>
	                    <div class="collapsible-content" style="margin-left: 20px">
	                    	<div class="sched-list">
			                    <input class="form-check-input interviewerName" type="checkbox">
		        				<label class="form-check-label" for="interviewerName" style="font-size: 14px;">Interviewer Name</label>
	        				</div>
	        				<div class="sched-list">
			                    <input class="form-check-input interviewerName" type="checkbox">
		        				<label class="form-check-label" for="interviewerName" style="font-size: 14px;">Interviewer Name</label>
	        				</div>
        				</div>
	                </div>
	            </div>
	        </div>
	    </div>
	</div>
	<!-- Calendar -->
    <div style="width: 85%; float: right;">
    	<div id="calendar"></div>
    </div>
</div>